<div class="row">
  <div class="medium-10 columns content-focus event-detail">

    <h2>{{data.title}}
      {{#can_edit}} <small><a href="/calendar/edit/{{data._id}}">(edit)</a></small>{{/can_edit}}
    </h2>

    {{#if data.host_name}}
      <h3>hosted by {{data.host_name}}</h3>
    {{/if}}

    <h4>{{data.seo_date}}</h4>

    {{#if data.time_start}}
      <h4>{{data.time_start}}{{#if data.time_end}} - {{data.time_end}}{{/if}}</h4>
    {{/if}}

    {{#if data.callin_phone}}
      <h4>Call in: {{data.callin_phone}} <i>({{data.callin_date}})</i></h4>
    {{/if}}






    <div class="description">
      {{{nltobr data.description}}}
    </div>


  	<div class="medium-6 columns">
      <h3>Location info</h3>
      {{#if data.venue_title}}
        <h4>{{data.venue_title}}</h4>
      {{/if}}
      {{#if data.venue_address}}
        <h5>{{data.venue_address}}</h5>
      {{/if}}
      <h5>{{data.venue_city}}, {{data.venue_state}} {{#if data.venue_zip}} &nbsp;&nbsp; {{data.venue_zip}}{{/if}}</h5>
      {{#if data.venue_map_url}}<a href="{{data.venue_map_url}}" target="_blank">Google Map</a>{{/if}}
  	</div>

  	<div class="medium-6 columns">
      <h3>Contact info</h3>
      {{#if data.contact_name}}
        <h4>{{data.contact_name}}</h4>
      {{/if}}
      {{#if data.contact_phone}}
        <h5>{{data.contact_phone}}</h5>
      {{/if}}
      {{#if data.contact_url}}
        <h5><a href="{{data.contact_url}}" target="_blank">{{data.contact_url}}</a></h5>
      {{/if}}
      <!-- {{#if data.contact_email}}<a href="mailto:{{data.contact_email}}">{{contact_email}}</a><br />{{/if}} -->
  	</div>


  </div>
  <div class="medium-2 columns sidebar">

    <a href="/calendar/edit/new">new event</a>

    {{> ads}}

  </div>
</div>
